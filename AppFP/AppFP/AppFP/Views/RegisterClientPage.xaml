<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFP.Views.RegisterClientPage"
             Title="Registo">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="20">
            <Entry Text ="{Binding Email, Mode=TwoWay}" Placeholder="Email" Keyboard="Email" />
            <Entry Text="{Binding Password, Mode=TwoWay}" Placeholder="Password" IsPassword="True"/>
            <Entry Text="{Binding ConfirmPassword, Mode=TwoWay}" Placeholder="Confirmar Password" IsPassword="True"/>
            <Button Text="Registar" Command="{Binding RegisterCommand}" BackgroundColor="#ffa63a" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>