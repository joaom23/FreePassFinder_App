<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFP.Views.ForgotPasswordPage"
             Title="Esqueceu-se da palavra passe?">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="20">
            <Label Text="Insira o seu Email" TextColor="#ffa63a" HorizontalTextAlignment="Center" FontSize="20"></Label>
            
            <Entry Text ="{Binding UserEmail, Mode=TwoWay}" Placeholder="Email" Keyboard="Email" />

            <Button Text="Enviar" Command="{Binding ForgotPasswordCommand}" BackgroundColor="#ffa63a" TextColor="White"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>